    "no_title_overlay": false,
    "font_path": null,
    "font_size_multiplier": 1.0
  },
  "rpe": {
    "rpe_easing_shift": 0
  },
  "debug": {
    "basic_debug": false,
    "debug_line_label": false,
    "debug_line_stats": false,
    "debug_judge_windows": false,
    "debug_note_info": false,
    "debug_particles": false
  },
  "mods": {
    "hold_to_tap_drag": {
      "enable": true,
      "interval": 0.06,
      "tap_head": true,
      "remove_hold": true,
      "include_end": true,
      "drag_kind": "flick"
    }
  }
