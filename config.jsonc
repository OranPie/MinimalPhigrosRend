    "note_scale_x": 2.0,
    "note_scale_y": 1.0,
    "note_flow_speed_multiplier": 1.0,
    "overrender": 1.0,
    "trail_alpha": 0.0,
    "trail_blur": 0,
    "trail_dim": 0,
    "hitfx_scale_mul": 0.75,
    "multicolor_lines": false,
    "no_note_outline": true,
    "line_alpha_affects_notes": "negative_only"
  },
  "audio": {
    "audio_backend": "pygame",
    "bgm": "charts/AbsoluTedisoRdeR.AcuteDisarray/AbsoluTedisoRdeR.AcuteDisarray.ogg",
    "force": false,
    "bgm_volume": 0.8,
    "hitsound_min_interval_ms": 30
