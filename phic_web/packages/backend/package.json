{
  "name": "@phic-web/backend",
  "version": "1.0.0",
  "type": "module",
  "description": "TypeScript backend with Chart CRUD API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./parsers": {
      "import": "./dist/parsers.js",
      "types": "./dist/parsers.d.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "fastify": "^4.25.2",
    "@fastify/multipart": "^8.0.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/static": "^6.12.0",
    "zod": "^3.22.4",
    "jszip": "^3.10.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "jsonc-parser": "^3.2.0",
    "@phic-web/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
